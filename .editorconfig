root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8

[*.{py}]
indent_style = space
indent_size = 4
insert_final_newline = true

[*.{js,json,y{a,}ml}]
indent_style = space
indent_size = 2

[*.sql]
indent_style = tab

[*.{md,Rmd,rst}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2